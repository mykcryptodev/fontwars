{
  "name": "font-wars",
  "displayName": "FontWars",
  "description": "Changes editor font based on $COMIC vs $HEL holdings",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fontWars.updateNow",
        "title": "FontWars: Update Font Now"
      }
    ],
    "configuration": {
      "title": "FontWars",
      "properties": {
        "fontWars.walletAddress": {
          "type": "string",
          "default": "",
          "description": "Your wallet address for FontWars"
        },
        "fontWars.updateInterval": {
          "type": "number",
          "default": 60,
          "description": "How often to update the font (in seconds)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.11.7",
    "typescript": "^4.5.5",
    "axios": "^0.24.0",
    "esbuild": "^0.20.0",
    "undici": "^6.0.0"
  }
}