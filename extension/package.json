{
  "name": "font-wars",
  "displayName": "FontWars",
  "description": "Changes editor font based on $COMIC vs $HEL holdings",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "FontWars",
      "properties": {
        "fontWars.walletAddress": {
          "type": "string",
          "default": "",
          "description": "Wallet address to monitor"
        },
        "fontWars.updateInterval": {
          "type": "number",
          "default": 3600,
          "description": "Update interval in seconds"
        }
      }
    },
    "commands": [{
      "command": "fontWars.updateNow",
      "title": "FontWars: Update Font Now"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.11.7",
    "typescript": "^4.5.5",
    "axios": "^0.24.0"
  }
}